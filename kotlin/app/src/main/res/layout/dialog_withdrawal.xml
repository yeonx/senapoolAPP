<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="320dp"
        android:layout_height="250dp"
        android:background="@color/lightbeige"
        android:backgroundTint="@color/lightbeige"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/withdrawal_text_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="회원탈퇴를 하시면 \n그동안의 기록들이 모두 삭제되며,\n복구가 불가능합니다. \n\n정말로 탈퇴 하시겠습니까?"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:gravity="center"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/font_regular"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <EditText
            android:id="@+id/withdrawal_password_et"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="비밀번호를 입력해주세요"
            android:textSize="15sp"
            android:inputType="textPassword"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/font_regular"
            app:layout_constraintTop_toBottomOf="@id/withdrawal_text_tv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/withdrawal_no_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="아니오"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold"
            android:fontFamily="@font/font_regular"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/withdrawal_yes_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="네"
            android:textColor="@color/red"
            android:textSize="15sp"
            android:textStyle="bold"
            android:fontFamily="@font/font_regular"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="30dp"
            app:layout_constraintEnd_toStartOf="@id/withdrawal_no_tv"
            app:layout_constraintTop_toTopOf="@id/withdrawal_no_tv"
            />



    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
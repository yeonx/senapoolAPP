<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/my_plant_diary_detail_arrow_iv"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/arrow"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:scaleType="fitXY"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/my_plant_diary_detail_delete_btn"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:text="삭제"
        android:background="@drawable/dark_green_button"
        android:textColor="@color/white"
        android:fontFamily="@font/font_regular"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="@id/my_plant_diary_detail_date_tv"
        app:layout_constraintTop_toTopOf="parent"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/my_plant_diary_detail_modify_btn"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:text="수정"
        android:background="@drawable/dark_green_button"
        android:textColor="@color/white"
        android:fontFamily="@font/font_regular"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toTopOf="@id/my_plant_diary_detail_delete_btn"
        app:layout_constraintEnd_toStartOf="@id/my_plant_diary_detail_delete_btn"/>

    <TextView
        android:id="@+id/my_plant_diary_detail_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="식물일기 제목"
        android:fontFamily="@font/font_regular"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginStart="30dp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/my_plant_diary_detail_delete_btn"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/my_plant_diary_detail_date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0000/00/00"
        android:fontFamily="@font/font_regular"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintTop_toBottomOf="@id/my_plant_diary_detail_title_tv"
        app:layout_constraintEnd_toEndOf="parent"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/my_plant_diary_detail_img_cardView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:cardCornerRadius="10dp"
        android:elevation="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        app:layout_constraintTop_toBottomOf="@id/my_plant_diary_detail_date_tv"
        >
        <ImageView
            android:id="@+id/my_plant_diary_detail_img_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/diary_image_example"
            android:scaleType="centerCrop"
            />
    </androidx.cardview.widget.CardView>
    <ImageView
        android:id="@+id/my_plant_diary_detail_heart_iv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/empty_heart"
        android:scaleType="fitXY"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/my_plant_diary_detail_img_cardView"
        app:layout_constraintStart_toStartOf="@id/my_plant_diary_detail_img_cardView"/>
    <TextView
        android:id="@+id/my_plant_diary_detail_heart_count_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="좋아요 한 사람 수"
        android:fontFamily="@font/font_regular"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="@id/my_plant_diary_detail_heart_iv"
        app:layout_constraintBottom_toBottomOf="@id/my_plant_diary_detail_heart_iv"
        app:layout_constraintStart_toEndOf="@id/my_plant_diary_detail_heart_iv"/>
    <TextView
        android:id="@+id/my_plant_diary_detail_content_tv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/diary_list_box"
        android:layout_marginTop="10dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="20dp"
        android:lineSpacingExtra="3dp"
        android:text="일기 내용입니다.\n일기내용입니다.\n일기내용입니다.\n일기내용입니다.\n일기내용입니다.
        \n일기내용입니다.\n일기내용입니다.\n일기내용입니다.\n일기내용입니다.\n일기내용입니다.\n일기내용입니다.
\n일기내용입니다.\n일기내용입니다.\n일기내용입니다.\n일기내용입니다.\n일기내용입니다.\n일기내용입니다.\n일기내용입니다.
\n일기내용입니다.\n일기내용입니다.\n일기내용입니다.\n일기내용입니다."
        android:fontFamily="@font/font_regular"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:padding="15dp"
        android:scrollbars="vertical"
        app:layout_constraintTop_toBottomOf="@id/my_plant_diary_detail_heart_iv"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
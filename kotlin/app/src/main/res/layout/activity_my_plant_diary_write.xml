<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/my_plant_diary_write_arrow_iv"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/arrow"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:scaleType="fitXY"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/my_plant_diary_write_save_btn"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:text="저장"
        android:background="@drawable/dark_green_button"
        android:textColor="@color/white"
        android:fontFamily="@font/font_regular"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="@id/my_plant_diary_write_img_cardView"
        app:layout_constraintTop_toTopOf="parent"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/my_plant_diary_write_modify_btn"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:text="공개"
        android:background="@drawable/dark_green_button"
        android:textColor="@color/white"
        android:fontFamily="@font/font_regular"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toTopOf="@id/my_plant_diary_write_save_btn"
        app:layout_constraintEnd_toStartOf="@id/my_plant_diary_write_save_btn"/>

    <TextView
        android:id="@+id/my_plant_diary_write_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="제목"
        android:fontFamily="@font/font_regular"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginStart="30dp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/my_plant_diary_write_save_btn"
        app:layout_constraintStart_toStartOf="parent"/>
    <EditText
        android:id="@+id/my_plant_diary_write_title_et"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="제목을 입력하세요"
        app:layout_constraintTop_toBottomOf="@id/my_plant_diary_write_title_tv"
        app:layout_constraintStart_toStartOf="@id/my_plant_diary_write_title_tv"/>
    <TextView
        android:id="@+id/my_plant_diary_write_date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="날짜"
        android:fontFamily="@font/font_regular"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginStart="30dp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/my_plant_diary_write_title_et"
        app:layout_constraintStart_toStartOf="parent"/>
    <EditText
        android:id="@+id/my_plant_diary_write_date_et"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="0000-00-00"
        app:layout_constraintTop_toBottomOf="@id/my_plant_diary_write_date_tv"
        app:layout_constraintStart_toStartOf="@id/my_plant_diary_write_date_tv"/>

   <androidx.cardview.widget.CardView
        android:id="@+id/my_plant_diary_write_img_cardView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:cardCornerRadius="10dp"
        android:elevation="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        app:layout_constraintTop_toBottomOf="@id/my_plant_diary_write_date_et"
        >
        <ImageView
            android:id="@+id/my_plant_diary_write_img_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/empty_img"
            android:scaleType="centerCrop"
            />
    </androidx.cardview.widget.CardView>
        <EditText
            android:id="@+id/my_plant_diary_write_content_tv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/diary_list_box"
            android:layout_marginTop="20dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="20dp"
            android:lineSpacingExtra="3dp"
            android:hint="내용을 입력하세요"
            android:fontFamily="@font/font_regular"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:padding="15dp"
            android:gravity="top"
            android:scrollbars="vertical"
            android:maxLines="10"
            app:layout_constraintTop_toBottomOf="@id/my_plant_diary_write_img_cardView"
            app:layout_constraintBottom_toBottomOf="parent"
            />

</androidx.constraintlayout.widget.ConstraintLayout>
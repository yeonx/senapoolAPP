<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="220dp"
        android:fontFamily="@font/font_regular"
        android:text="회원탈퇴"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/pw_check_to_quit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="100dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:hint="비밀번호를 입력하세요"
        android:fontFamily="@font/font_regular"
        android:textColorHint="@color/gray"
        android:backgroundTint="@color/black"
        app:layout_constraintTop_toTopOf="@id/textView"
        app:layout_constraintStart_toStartOf="@id/textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/quit_btn_doublecheck"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="60dp"
        android:text="탈퇴"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:fontFamily="@font/font_regular"
        android:background="@drawable/watering_button_darkgreen"
        app:layout_constraintTop_toTopOf="@id/pw_check_to_quit"
        app:layout_constraintStart_toStartOf="@id/pw_check_to_quit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pw_check_to_quit" />


</androidx.constraintlayout.widget.ConstraintLayout>